#include<iostream>
#include<queue>
using namespace std;

int main(void)
{
    priority_queue<int> pq;                     // 우선순위 큐 선언 (기본적으로 최대 힙)
    cout << "empty : " << pq.empty() << endl;   // 비어있는지 출력 (1: 비어있음)

    pq.push(20);                                // 20 삽입
    cout << "empty : " << pq.empty() << endl;   // 비어있는지 출력 (0: 비어있지 않음)
    cout << "top : " << pq.top() << endl;       // 현재 top 출력 (20)

    pq.push(10);                                // 10 삽입
    cout << "top : " << pq.top() << endl;       // top은 20 (더 큰 값)

    pq.push(30);                                // 30 삽입
    cout << "top : " << pq.top() << endl;       // top은 30 (가장 큰 값)

    pq.push(50);                                // 50 삽입
    pq.push(40);                                // 40 삽입
    cout << "top : " << pq.top() << endl;       // top은 50

    cout << "size : " << pq.size() << endl;     // 큐의 크기 출력 (5)

    pq.pop();                                   // top (50) 제거
    cout << "top : " << pq.top() << endl;       // 새로운 top (40)

    while (!pq.empty()) {                       // 큐가 빌 때까지 반복
        cout << pq.top() << endl;               // top 출력
        pq.pop();                               // top 제거
    }

    return 0;
}
