#include <fstream>
#include <iostream>
#include <string>

using namespace std;

int main(void)
{
    char buf[100];                      // 읽어온 내용을 저장할 버퍼 선언
    ifstream in("test.txt");            // "test.txt" 파일을 읽기 위해 오픈 시도

    if (in.is_open())                   // 파일이 정상적으로 열렸는지 확인
    {
        while (in)                     // 파일의 끝까지 읽기
        {
            in.getline(buf, 100);     // 한 줄씩 최대 100문자 읽어서 buf에 저장
            cout << buf << endl;      // 읽은 내용 출력
        }
    }
    else                               // 파일 열기에 실패했을 경우 실행
    {
        cout << "파일을 찾을 수 없다" << endl;
    }
    return 0;                         // 프로그램 정상 종료
}
