#include <iostream>
#include <vector>     // vector를 사용하기 위한 헤더 파일

using namespace std; // std:: 생략 가능하게 함

int main(void)
{
    vector<int> v;  // int형을 저장하는 벡터 v 선언

    v.push_back(21); // 벡터에 21 추가
    v.push_back(32); // 벡터에 32 추가
    v.push_back(53); // 벡터에 53 추가
    v.push_back(64); // 벡터에 64 추가
    v.push_back(15); // 벡터에 15 추가

    // 멤버형식 size_type을 이용한 반복문
    for (vector<int>::size_type i = 0; i < v.size(); i++)  // size_type은 부호 없는 정수형
        cout << v.at(i) << " ";  // 범위 체크하는 at()로 요소 출력
    cout << endl;

    // 일반 int형 인덱스를 이용한 반복문
    for (int i = 0; i < v.size(); i++)  // int형 인덱스로 반복
        cout << v[i] << " ";  // []는 at보다 빠르지만 범위 체크 없음
    cout << endl;

    // 반복자(iterator)를 이용한 반복문
    vector<int>::iterator iter;  // 반복자 선언
    for (iter = v.begin(); iter != v.end(); iter++)  // 반복자 범위 순회
        cout << *iter << " ";  // 반복자가 가리키는 값을 출력
    cout << endl;

    return 0;
}
