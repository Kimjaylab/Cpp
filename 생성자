void main(void)
{
CCalc calc1;
CCalc calc2(100);

calc1.Plus(5);
calc1.Minus(2);
calc1.Print();

calc2.Plus(100);
calc2.Minus(50);
calc2.Print( );
}

#include<iostream>
using namespace std;

class CCalc {
private:
int result;

public:
CCalc(int init = 0) { result = init; } //CCalc( ) { result = 0; }
void Plus(int num) { result += num; }
void Minus(int num) { result -= num; }
void Print( ) { cout << "result : " << result << endl; }
};
