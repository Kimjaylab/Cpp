#include<iostream>
#include<queue>
using namespace std;

int main(void)
{
    queue<int> q;

    // 큐가 비어있는 상태 확인
    cout << endl << "=== empty ===" << endl;
    cout << "size : " << q.size( ) << endl;           // 현재 큐의 크기 출력
    cout << "empty : " << q.empty( ) << endl;         // 큐가 비어있는지 여부 출력 (1: 비어있음, 0: 비어있지 않음)

    // 큐에 데이터 삽입
    q.push(10);
    q.push(20);
    q.push(30);
    q.push(40);
    q.push(50);
    q.push(60);

    // 큐에 데이터 삽입 후 상태 출력
    cout << endl << "=== push ===" << endl;
    cout << "size : " << q.size( ) << endl;           // 큐의 크기 출력
    cout << "front : " << q.front( ) << endl;         // 큐의 앞(front) 요소 출력
    cout << "back : " << q.back( ) << endl << endl;   // 큐의 뒤(back) 요소 출력

    // 큐에서 데이터를 꺼내며 출력
    cout << endl << "=== front & pop ===" << endl;
    while (!q.empty( ))
    {
        cout << q.front( ) << endl;   // 큐의 앞 요소 출력
        q.pop( );                     // 큐의 앞 요소 제거
    }

    return 0;
}
