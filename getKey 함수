#include <iostream>
#include <conio.h>  // getch() 함수 사용을 위해 포함

using namespace std;

#define KEY_ESC 27           // ESC 키의 ASCII 코드 정의
#define KEY_UP (256 + 72)    // 방향키 위 (특수키 224 + 72) 값 정의
#define KEY_DOWN (256 + 80)  // 방향키 아래 값 정의
#define KEY_LEFT (256 + 75)  // 방향키 왼쪽 값 정의
#define KEY_RIGHT (256 + 77) // 방향키 오른쪽 값 정의

// 키 입력을 받아 처리하는 함수
int getKey(void)
{
    int ch = getch();           // 키 입력을 받음, 방향키는 첫 입력이 0 또는 224임
    if (ch == 0 || ch == 224)  // 방향키는 특수키로 두 번 입력되므로
        ch = 256 + getch();    // 두 번째 입력값을 받아서 실제 키 코드 계산
    return ch;                 // 최종 키 코드 반환
}
