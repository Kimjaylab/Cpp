#include <iostream>
using namespace std;

class CPoint {
private:
    int x, y;  // 점의 좌표를 저장하는 멤버 변수

public:
    CPoint(int a, int b) : x(a), y(b) { }  // 생성자: x와 y를 초기화

    CPoint& MoveX(int a) {
        x += a;             // x좌표를 a만큼 이동
        return (*this);     // 현재 객체 자신을 참조로 반환 (메서드 체인 가능)
    }

    CPoint& MoveY(int b) {
        y += b;             // y좌표를 b만큼 이동
        return (*this);     // 현재 객체 자신을 참조로 반환 (메서드 체인 가능)
    }

    void Print() {
        cout << "(" << x << ", " << y << ")" << endl;  // 좌표 출력
    }
};

int main(void)  // main 함수는 int 반환형이 표준
{
    CPoint P1(1, 2);    // 초기 좌표 (1, 2)인 점 P1 생성

    P1.MoveX(3);        // x좌표를 3만큼 이동 (1+3=4)
    P1.MoveY(4);        // y좌표를 4만큼 이동 (2+4=6)
    P1.Print();         // 현재 좌표 출력 -> (4, 6)

    return 0;
}

