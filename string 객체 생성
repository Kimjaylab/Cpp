#include <iostream>
#include <string>

using namespace std;

int main(void)
{
    string str; // 빈 문자열을 가진 string 객체 생성

    string addr("Incheon SongDo"); // 문자열 리터럴로 초기화된 string 객체 생성

    string copyAddr(addr); // addr을 복사하여 copyAddr이라는 새로운 string 객체 생성

    // C-스트링 (char 배열)으로부터 string 객체 생성
    char text[] = { 'l', 'o', 'v', 'e', ' ', 'c', '+', '+', '\0' }; // null-종료된 문자 배열 (C-스트링)
    string title(text); // "love C++"을 가진 string 객체 생성

    // string 객체의 내용을 cout으로 출력
    cout << addr << endl;   // "Incheon SongDo" 출력
    cout << title << endl;  // "love C++" 출력

    return 0;
}
